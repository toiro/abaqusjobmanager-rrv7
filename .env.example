# Abaqus Job Manager Environment Variables
# Copy this file to .env and modify values as needed
# For environment-specific configs, use .env.development or .env.production

# File Upload Configuration
UPLOADS_DIR=./uploads

# Database Configuration
DATABASE_URL=./database.db

# Server Configuration
PORT=3000

# Environment
NODE_ENV=development

# Logging Configuration (LogTape)
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/abaqus-job-manager.log
LOG_FILE_MAX_SIZE=10MiB
LOG_FILE_MAX_FILES=7

# Admin Authentication (Bearer Token)
ADMIN_TOKEN=admin_token

# Legacy debug settings (deprecated - use LOG_LEVEL instead)
DEBUG=false