describe("Job Operations", () => {
  test("should create and retrieve job", () => {
    // Create user and file first
    const userId = userRepository.createUser({
      display_name: `jobuser_${Date.now()}`,
      max_concurrent_jobs: 5,
      is_active: true
    });
    
    const fileId = fileRepository.createFileRecord({
      original_name: "job.inp",
      stored_name: "job_stored.inp",
      file_path: "/uploads/job_stored.inp", 
      file_size: 2048,
      mime_type: "text/plain",
      uploaded_by: "jobuser"
    });

    const jobData = {
      name: "test-job",
      status: "waiting" as const,
      file_id: fileId,
      user_id: userId,
      cpu_cores: 4,
      priority: "normal" as const
    };

    const jobId = jobRepository.createJob(jobData);
    expect(jobId).toBeGreaterThan(0);

    const retrievedJob = jobRepository.findJobById(jobId);
    expect(retrievedJob).not.toBeNull();
    expect(retrievedJob?.name).toBe(jobData.name);
    expect(retrievedJob?.status).toBe(jobData.status);
  });

  test("should find jobs by status", () => {
    // Create user and file first
    const userId = userRepository.createUser({
      display_name: `statususer_${Date.now()}`,
      max_concurrent_jobs: 5,
      is_active: true
    });
    
    const fileId = fileRepository.createFileRecord({
      original_name: "status.inp",
      stored_name: "status_stored.inp",
      file_path: "/uploads/status_stored.inp",
      file_size: 1024,
      mime_type: "text/plain", 
      uploaded_by: "statususer"
    });

    const waitingJob = jobRepository.createJob({
      name: "waiting-job",
      status: "waiting" as const,
      file_id: fileId,
      user_id: userId,
      cpu_cores: 2,
      priority: "normal" as const
    });

    const runningJob = jobRepository.createJob({
      name: "running-job", 
      status: "running" as const,
      file_id: fileId,
      user_id: userId,
      cpu_cores: 4,
      priority: "high" as const
    });

    const waitingJobs = jobRepository.findJobsByStatus("waiting");
    const runningJobs = jobRepository.findJobsByStatus("running");

    expect(waitingJobs.length).toBeGreaterThanOrEqual(1);
    expect(runningJobs.length).toBeGreaterThanOrEqual(1);
  });

  test("should update job status", () => {
    // Create user and file first
    const userId = userRepository.createUser({
      display_name: `updateuser_${Date.now()}`,
      max_concurrent_jobs: 5,
      is_active: true
    });
    
    const fileId = fileRepository.createFileRecord({
      original_name: "update.inp",
      stored_name: "update_stored.inp",
      file_path: "/uploads/update_stored.inp",
      file_size: 1024,
      mime_type: "text/plain",
      uploaded_by: "updateuser"
    });

    const jobId = jobRepository.createJob({
      name: "update-job",
      status: "waiting" as const,
      file_id: fileId,
      user_id: userId,
      cpu_cores: 2,
      priority: "normal" as const
    });

    const updated = jobRepository.updateJobStatus(jobId, "running");
    expect(updated).toBe(true);

    const updatedJob = jobRepository.findJobById(jobId);
    expect(updatedJob?.status).toBe("running");
  });

  test("should assign job to node", () => {
    // Create user, file, and node first
    const userId = userRepository.createUser({
      display_name: `assignuser_${Date.now()}`,
      max_concurrent_jobs: 5,
      is_active: true
    });
    
    const fileId = fileRepository.createFileRecord({
      original_name: "assign.inp",
      stored_name: "assign_stored.inp",
      file_path: "/uploads/assign_stored.inp",
      file_size: 1024,
      mime_type: "text/plain",
      uploaded_by: "assignuser"
    });

    const nodeId = nodeRepository.createNode({
      name: "assign-node",
      hostname: "assign.example.com",
      cpu_cores_limit: 8,
      license_token_limit: 8,
      is_active: true,
      ssh_port: 22
    });

    const jobId = jobRepository.createJob({
      name: "assign-job",
      status: "waiting" as const,
      file_id: fileId,
      user_id: userId,
      cpu_cores: 4,
      priority: "normal" as const
    });

    const assigned = jobRepository.assignJobToNode(jobId, nodeId);
    expect(assigned).toBe(true);

    const assignedJob = jobRepository.findJobById(jobId);
    expect(assignedJob?.node_id).toBe(nodeId);
  });
});

