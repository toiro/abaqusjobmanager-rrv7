describe("User Operations", () => {
  test("should create and retrieve user", () => {
    const userData = {
      display_name: `testuser_${Date.now()}`,
      max_concurrent_jobs: 3,
      is_active: true
    };

    const userId = userRepository.createUser(userData);
    expect(userId).toBeGreaterThan(0);

    const retrievedUser = userRepository.findUserById(userId);
    expect(retrievedUser).not.toBeNull();
    expect(retrievedUser?.display_name).toBe(userData.display_name);
    expect(retrievedUser?.max_concurrent_jobs).toBe(userData.max_concurrent_jobs);
    expect(retrievedUser?.is_active).toBe(true);
  });

  test("should find user by display name", () => {
    const userData = {
      display_name: `finduser_${Date.now()}`,
      max_concurrent_jobs: 2,
      is_active: true
    };

    const userId = userRepository.createUser(userData);
    const foundUser = userRepository.findUserByDisplayName(userData.display_name);
    
    expect(foundUser).not.toBeNull();
    expect(foundUser?.id).toBe(userId);
    expect(foundUser?.display_name).toBe(userData.display_name);
  });

  test("should count current running jobs", () => {
    const user = {
      display_name: "User_with_0_jobs",
      max_concurrent_jobs: 5,
      is_active: true
    };
    const userId = userRepository.createUser(user);

    const runningJobsCount = userRepository.getCurrentJobCount(userId);
    expect(runningJobsCount).toBe(0);
  });

  test("should check if user can create job", () => {
    const user = {
      display_name: "User_with_max_jobs",
      max_concurrent_jobs: 1,
      is_active: true
    };
    const userId = userRepository.createUser(user);

    const canCreate = userRepository.canCreateJob(userId);
    expect(canCreate).toBe(true);
  });

  test("should activate and deactivate user", () => {
    const userData = {
      display_name: `activateuser_${Date.now()}`,
      max_concurrent_jobs: 3,
      is_active: true
    };

    const userId = userRepository.createUser(userData);
    
    const deactivated = userRepository.deactivateUser(userId);
    expect(deactivated).toBe(true);
    
    const activated = userRepository.activateUser(userId);
    expect(activated).toBe(true);
  });
});

describe("Node Operations", () => {
  test("should create and retrieve node", () => {
    const nodeData = {
      name: "test-node",
      hostname: "test.example.com",
      cpu_cores_limit: 8,
      license_token_limit: 8,
      is_active: true,
      ssh_port: 22
    };

    const nodeId = nodeRepository.createNode(nodeData);
    expect(nodeId).toBeGreaterThan(0);

    const retrievedNode = nodeRepository.findNodeById(nodeId);
    expect(retrievedNode).not.toBeNull();
    expect(retrievedNode?.name).toBe(nodeData.name);
    expect(retrievedNode?.hostname).toBe(nodeData.hostname);
    expect(retrievedNode?.cpu_cores_limit).toBe(nodeData.cpu_cores_limit);
  });

  test("should find available nodes", () => {
    const node1 = nodeRepository.createNode({
      name: "available-node-1",
      hostname: "node1.example.com",
      cpu_cores_limit: 4,
      license_token_limit: 4,
      is_active: true,
      ssh_port: 22
    });
    
    const node2 = nodeRepository.createNode({
      name: "available-node-2", 
      hostname: "node2.example.com",
      cpu_cores_limit: 8,
      license_token_limit: 8,
      is_active: true,
      ssh_port: 22
    });

    const availableNodes = nodeRepository.findActiveNodes();
    expect(availableNodes.length).toBeGreaterThanOrEqual(2);
  });

  test("should update node status", () => {
    const nodeData = {
      name: "status-test-node",
      hostname: "status.example.com",
      cpu_cores_limit: 4,
      license_token_limit: 4,
      is_active: true,
      ssh_port: 22
    };

    const nodeId = nodeRepository.createNode(nodeData);
    const updated = nodeRepository.updateNodeStatus(nodeId, "available");
    
    expect(updated).toBe(true);
    
    const updatedNode = nodeRepository.findNodeById(nodeId);
    expect(updatedNode?.status).toBe("available");
  });
});

